<Window x:Class="WPF_Client.Updatewindows.ArtistUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client.Updatewindows"
        mc:Ignorable="d"
        Title="ArtistUpdateWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="ID" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding ArtistId}" Padding="5"/>
        <Label Content="Name" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding ArtistName}" Padding="5"/>
        <Label Content="Age" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding Age}" Padding="5"/>
        <Label Content="DebutYear" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding DebutYear}" Padding="5"/>
        <Label Content="Type" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding Type}" Padding="5"/>
        <Label Content="Gender" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding Gender}" Padding="5"/>
        <Label Content="Nationality" Padding="5" Background="LightBlue"/>
        <TextBox Text="{Binding Nationality}" Padding="5" />
        <Button Padding="10" Content="Update" Click="Button_Click"/>
    </StackPanel>
</Window>
