<Window x:Class="WPF_Client.Updatewindows.LabelUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Client.Updatewindows"
        mc:Ignorable="d"
        Title="LabelUpdateWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Stretch">
        <Label Padding="5" Content="ID" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding LabelId}"/>
        <Label Padding="5" Content="Name" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding LabelName}"/>
        <Label Padding="5" Content="Value" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding LabelValue}"/>
        <Label Padding="5" Content="BasedIn" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding BasedIn}"/>
        <Label Padding="5" Content="FoundmentDate" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding FoundmentDate}"/>
        <Label Padding="5" Content="Founder" Background="LightBlue"/>
        <TextBox Padding="5" Text="{Binding Founder}"/>
        <Button Padding="10" Content="Update" Click="Button_Click"/>
    </StackPanel>
</Window>
